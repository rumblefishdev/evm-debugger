{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@monorepo/*": ["packages/*/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "dist", "*.d.ts"],
    "references": [
        {
            "path": "packages/analyzer"
        }
    ]
}
